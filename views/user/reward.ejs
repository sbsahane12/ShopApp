<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reward Points</title>
    <style>


      .card {
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        background: #fff;
        max-width: 350px;
        margin: 20px auto;
        text-align: center;
      }

      .card-header {
        background-color: #007bff;
        color: white;
        font-size: 1.2rem;
        padding: 15px;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
      }

      .card-header .icon {
        font-size: 2rem;
        margin-bottom: 10px;
      }

      .card-body {
        padding: 20px;
        position: relative;
      }

      .scratch-card-container {
        position: relative;
        width: 100%;
        height: 200px;
        background-color: #76d8eb;
        border-radius: 12px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
      }

      .total-points {
        font-size: 2.5rem;
        color: #050e45;
        font-weight: bold;
        display: none;
      }

      /* Scratch effect styling */
      .scratch-card {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #e26dbf;
        z-index: 1;
        border-radius: 12px;
      }

      .scratched .scratch-card {
        display: none;
      }

      .scratched .total-points {
        display: block;
      }
    </style>
  </head>

  <body>
    <%- include('../partials/header') %> <%- include('../partials/flash') %>

    <div class="container">
      <h1 class="text-center">Your Reward</h1>
      <div class="card">
        <div class="card-header">
          <i class="icon fas fa-coins"></i>
        </div>
        <div class="card-body">
          <div
            class="scratch-card-container"
            id="scratchCard"
            onclick="revealPoints()"
          >
            <div class="scratch-card"></div>
            <div class="scratch-card-text"></div>
            <div class="total-points" id="totalPoints">
              <%= totalRewardPoints %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
      function revealPoints() {
        const scratchCard = document.getElementById('scratchCard');
        scratchCard.classList.add('scratched');
      }
    </script>
  </body>
</html>
